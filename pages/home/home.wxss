/*
视频列表
*/

.video_wrap {
    width: 100%;

  display: flex;
  flex-wrap: wrap;
  /* padding: 5rpx; */
  justify-content: space-between;
  /* margin-bottom: 10rpx; */
}

.video_item {
  width: 100%;
  margin: 20rpx 20rpx 0 20rpx;
  background-color: white;
  border-radius: 20rpx;
}

.video_img {
  position: relative;
}

.video_img image {
  width: 100%;
  height:500rpx;
  /* margin: 5rpx; */
  border-radius: 0rpx;
}

swiper {
  width: 100%;
  height:500rpx;
  /* margin: 5rpx; */
}

.video_img video {
  width: 100%;
  height: 500rpx;
}

.video_img .video_info {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}

.video_title {
  margin: 20rpx;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.other {
  margin: 15rpx;
  display: flex;
