.search-bar {
  position: relative;
  margin: 10rpx 30rpx;
  height: 70rpx;
  display: flex;
  border-radius: 10rpx;
  /* border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC; */
}

.icon-search {
  margin-right: 4rpx;
  font-size: inherit;
}

.con-search_in-box {
  position: absolute;
  left: 10rpx;
  top: 30rpx;
}

.search-bar__text {
  display: inline-block;
  font-size: 16rpx;
}

.search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5rpx;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.search-bar__box {
  position: relative;
  padding-left: 30rpx;
  padding-right: 30rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.search-bar__input {
  height: 28rpx;
  line-height: 28rpx;
  font-size: 25rpx;
}

.search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 14rpx;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28rpx;
}

.search-bar__cancel-btn {
  margin-left: 10rpx;
  line-height: 28rpx;
  font-size: 25rpx;
  color: #09bb07;
  white-space: nowrap;
}