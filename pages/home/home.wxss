/* 顶部菜单切换 */

.nav_area {
  /* padding-top: 10rpx; */
  color: grey;
  background-color: white;
}

.navbar {
  /* display: flex; */
  height: 70rpx;
}

/* 默认选中菜单 */

.navbar .item {
  margin: 0 35rpx 0 35rpx;
  font-size: 27rpx;
  text-align: center;
  /* display: flex; */
  display: inline-block;
}

/* 选中菜单样式 */

.navbar .item.active {
  border-bottom: 6rpx solid black;
  color: black;
  font-size: 35rpx;
}

/* 字体 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  width: 3rpx;
}

.nav_wrap {
  display: flex;
  height: 60rpx;
  /* padding: 10rpx; */
  border: 5rpx solid black;
  border-radius: 5rpx;
  padding: 10rpx;

}

.nav_wrap_text {
  width: 30%;
  border-left: 5rpx solid black;
}

.nav_wrap_text text {
  font-size: 25rpx;
  text-align: center;
  margin-left: 15rpx;
}

.order_flag {
    font-size: 25rpx;
}
.order_flag.active{
  font-size: 28rpx;
  color: black;
}



.nav_wrap_text image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.nav {
  white-space: nowrap;
  width: 70%;
  /* border: 2rpx solid rgb(0, 0, 0); */
  display: flex;
}

.nav_item {
  padding-left: 25rpx;
  font-size: 25rpx;
  text-align: center;
  display: inline-block;
}

.nav_item.active {
  font-size: 30rpx;
  color: black;
}

