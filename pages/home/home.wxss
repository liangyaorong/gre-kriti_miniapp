/* 顶部菜单切换 */

.navbar {
  display: flex;
  background: #fff;

}

.none_tab {
  position: relative;
  top: 20rpx;
  color: grey;
  font-size: 32rpx;
}

/* 默认选中菜单 */

.navbar .item {
  position: relative;
  flex: auto;
  font-size: 25rpx;
  width: 100rpx;
  text-align: center;
  line-height: 80rpx;
  color: #333;
  border-bottom: 6rpx solid #ddd;
}

/* 选中菜单样式 */

.navbar .item.active {
  color: #333;
  border-bottom: 6rpx solid #000;
    font-size: 30rpx;


}

/* 字体 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

.nav_wrap{
  /* background-color: grey; */
}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding: 10rpx 25rpx;
  font-size: 25rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom: 5rpx solid #de688b;
}
/* 轮播图样式 */
.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height: 220rpx;
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 400rpx;
}

/*
视频列表
*/
.video_wrap{
 display: flex;
 flex-wrap: wrap;
 /* padding: 5rpx; */
 justify-content: space-between;
}
.video_item{
  width: 100%;
  margin-bottom: 20rpx;
}
.video_img{
  position: relative;
}
.video_img image{
  width: 100%;
  height: 500rpx;
  /* margin: 5rpx; */
  border-radius: 0rpx;
}
.video_img video{
  width: 100%;
  height: 500rpx;
  border-radius: 0rpx;
}
.video_img .video_info{
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}
.video_title{
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}

