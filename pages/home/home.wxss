/* 首页导航 */

page {
  color: #666;
  /* padding: 10rpx; */
}

.nav_area {
  /* border-top: 1rpx solid rgb(224, 224, 224); */
  /* border-bottom: 1rpx solid grey; */
}

/* 顶部菜单切换 */

.navbar {
  /* display: flex; */
  height: 70rpx;
}

/* 默认选中菜单 */

.navbar .item {
  margin: 0 35rpx 0 35rpx;
  font-size: 27rpx;
  text-align: center;
  display: inline-block;
}

/* 选中菜单样式 */

.navbar .item.active {
  border-bottom: 6rpx solid grey;
  font-size: 35rpx;
}

/* 字体 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  width: 3rpx;
}

.nav_wrap {
  display: flex;
  height: 70rpx;
}

.nav_wrap_text {
  width: 20%;
  border-left: 2rpx solid #ddd;
}

.nav_wrap_text text {
  font-size: 25rpx;
  text-align: center;
  margin-left: 30rpx;
}

.nav_wrap_text image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
  width: 80%;
  /* border: 2rpx solid rgb(0, 0, 0); */
  display: flex;
}

.nav_item {
  padding-left: 35rpx;
  font-size: 25rpx;
  text-align: center;
  display: inline-block;
}

.nav_item.active {
  font-size: 30rpx;
}

/* 轮播图样式 */

.slides {
  margin-top: 10rpx;
}

.slides swiper {
  height: 220rpx;
}

.slides navigator {
  width: 100%;
  height: 100%;
}

.slides image {
  width: 100%;
  height: 400rpx;
}

/*
视频列表
*/

.video_wrap {
  display: flex;
  flex-wrap: wrap;
  /* padding: 5rpx; */
  justify-content: space-between;
  /* background-color: #ddd; */
  margin-bottom: 10rpx;
}

.video_item {
  width: 100%;
  margin: 20rpx 0 0 0;
}

.video_img {
  position: relative;
}

.video_img image {
  width: 100%;
  height: 500rpx;
  /* margin: 5rpx; */
  border-radius: 0rpx;
}

.video_img video {
  width: 100%;
  height: 500rpx;
  border-radius: 0rpx;
}

.video_img .video_info {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}

.video_title {
  margin: 20rpx;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.other {
  padding: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  text-align: center;
  align-items: center;

  /* float: left; */
}

.other image {
  width: 50rpx;
  height: 50rpx;
  align-items: center;
  justify-content: space-around;
}

.icontext {
  font-size: 23rpx;
  padding-left: 10rpx;
  /* font-weight: bold; */
  float: right;
  line-height: 50rpx;
}

.head-title {
  margin: 20rpx 30rpx 50rpx 50rpx;
  color: grey;
}

.artist {
  /* border-top: 1rpx solid #ddd; */
  padding-top: 15rpx;
  padding-left: 25rpx;
  display: flex;
}

.artist image {
  display: block;
  width: 68rpx;
  height: 68rpx;
  float: right;
  border-radius: 34px;
}

.text-box {
  padding-left: 25rpx;
}

.arow01 {
  margin-bottom: 20rpx;
}

.arow {
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
}

.artist-name {
  width: 360rpx;
  font-size: 30rpx;
  font-weight: 700;
  height: 15rpx;
  color: #000;
}

.time {
  font-size: 25rpx;
  color: #999;
}
