/* 顶部菜单切换 */

.navbar {
  display: flex;
  background: #fff;

}

.none_tab {
  position: relative;
  top: 20rpx;
  color: grey;
  font-size: 32rpx;
}

/* 默认选中菜单 */

.navbar .item {
  position: relative;
  flex: auto;
  font-size: 25rpx;
  width: 100rpx;
  text-align: center;
  line-height: 80rpx;
  color: #333;
  border-bottom: 6rpx solid #ddd;
}

/* 选中菜单样式 */

.navbar .item.active {
  color: #333;
  border-bottom: 6rpx solid #000;
    font-size: 30rpx;


}

/* 字体 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
}

