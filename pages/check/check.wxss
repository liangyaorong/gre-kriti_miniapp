/* 顶部菜单切换 */

.navbar {
  /* display: flex; */
  height: 70rpx;
}

/* 默认选中菜单 */

.navbar .item {
  margin: 0 35rpx 0 35rpx;
  font-size: 27rpx;
  text-align: center;
  display: inline-block;
}

/* 选中菜单样式 */

.navbar .item.active {
  border-bottom: 6rpx solid black;
  color: black;
  font-size: 35rpx;
}

/* 字体 */

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  width: 3rpx;
}

.nav_wrap {
  display: flex;
  height: 70rpx;
}

.nav_wrap_text {
  width: 30%;
  border-left: 2rpx solid #ddd;
}

.nav_wrap_text text {
  font-size: 25rpx;
  text-align: center;
  margin-left: 30rpx;
}

.nav_wrap_text image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
  width: 70%;
  /* border: 2rpx solid rgb(0, 0, 0); */
  display: flex;
}

.nav_item {
  padding-left: 35rpx;
  font-size: 25rpx;
  text-align: center;
  display: inline-block;
}

.nav_item.active {
  font-size: 30rpx;
  color: black;
}

