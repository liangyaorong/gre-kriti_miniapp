/* pages/uploadVid/uploadVid.wxss */

.the-tit {
  width: 100%;
  height: 50rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #f00;
  margin-top: 20rpx;
}

.share-vids {
  width: 100%;
  max-height: 500rpx;
  margin-top: 10rpx;
  overflow: hidden;
  /* padding: 0 20rpx; */
  box-sizing: border-box;
  overflow-y: hidden;
  overflow-x: auto;
}

.share-vids .videos {
  width: 400rpx;
  max-height: 700rpx;
  float: left;
  position: relative;
}

.share-vids .videos .vid {
  width: 400rpx;
  height: 300rpx;
  float: left;
}

.share-vids .videos .vid .video {
  width: 400rpx;
  height: 300rpx;
}

.add-btn {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  /* float: left; */
  border: 1px solid #a7a7a7;
  box-sizing: border-box;
  position: relative;
  margin-top: 20rpx;
}

.add-btn::after {
  content: "";
  width: 80rpx;
  height: 80rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url('https://7830-x01-a0804c-1258524456.tcb.qcloud.la/icons/add-pic-btn.png');
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.share-vids .delbtn {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  /* background-color: rgba(0, 0, 0, 0.4); *//* color: #fff; */
  font-size: 22rpx;
  text-align: center;
}



