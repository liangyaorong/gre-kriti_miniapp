}

/* 列表 */

.list {
  position: relative;
  width: 90%;
  display: inline-block;
  padding-bottom: 20rpx;
  height: 150rpx;
}

/* 列表图片 */

.list_img {
  position: absolute;
  width: 144rpx;
  height: 144rpx;
  left: 0rpx;
  top: 30rpx;
}

/* 列表标题 */

.list_name {
  position: absolute;
  text-align: left;
  top: 30rpx;
  left: 180rpx;
  color: #333;
  width: 50%;
  font-size: 25rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 列表价格 */

.list_money {
  position: absolute;
  font-size: 32rpx;
  right: 0rpx;
  top: 30rpx;
}

