<!--导航条-->
<view class="navbar">
  <lable wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">
    <text>{{item}}</text>
  </lable>
</view>

<!--视频-->
<view hidden="{{currentTab!='0'}}" class='total'>
  <!--pages/uploadVid/uploadVid.wxml-->



  <!-- 选文件 -->
  <text class="select-title">视频选择</text>
  <view hidden="{{!upVideoFilesBtn}}" class='add-btn' data-type="video" bindtap='chooseFiles'>
  </view>

  <view class='share-vids'>
    <view class='videos'>
      <block wx:for="{{upVideoArr}}" wx:for-item="v" wx:key="k">
        <view class='vid'>
          <!-- tempFilePath指视频路径，thumbTempFilePath指视频封面 -->
          <video class='video' src="{{v.tempFilePath}}" poster='{{v.thumbTempFilePath}}'></video>
        </view>
        <image class='delbtn' data-index="{{index}}" data-type="video" bindtap='delFile' src='data:image/png;base64,'></image>
      </block>
    </view>

  </view>

  <textarea class='desc' maxlength='50' style="height: 5em" placeholder='描述即将发表的作品'></textarea>

  <button type='primary'>发表</button>

</view>

<!--图片-->
<view hidden="{{currentTab!='1'}}" class='total'>
  <text class="select-title">图片选择</text>


  <view class='share-pics' wx:if="{{upImagePathLen!=0}}">
    <view class='slug-cons'>
      <view class='pics'>
        <view class='tp' wx:for="{{upImgArr}}" wx:key="item">
          <image mode='aspectFill' class='img' src='{{item.path}}' data-presrc="{{item.path}}" bindtap='previewImg' />
          <image class='delbtn' data-index="{{index}}" data-type="image" bindtap='delFile' src='data:image/png;base64,'></image>
        </view>
      </view>
      
    </view>
  </view>

  <view class='btn' wx:if="{{upImageFilesBtn}}" data-type="image" bindtap='chooseFiles'></view>

  <textarea class='desc' maxlength='50' style="height: 5em" placeholder='描述即将发表的作品'></textarea>

  <button type='primary'>发表</button>
</view>